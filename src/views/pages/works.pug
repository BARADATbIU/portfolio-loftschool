extends ../main.layout.pug

block variables
  - var title = 'Мои работы'
  - 
    var reviews = [
      {
        text: 'Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!',
        img: 'kov',
        name: 'Ковальчук Дмитрий',
        post: 'основатель Loftschool'
      },{
        text: 'Этот код выдержит любые испытания. Только пожалуйста, не загружается сайт на слишком старых браузерах!',
        img: 'sab',
        name: 'Сабанцев Владимир',
        post: 'преподаватель Loftschool'
      }
    ]

block scripts
  script(src='works.bundle.js')

block content
  include ../common/header

  section.works
    +triangles('works')
    .works__title
        +title('works', 'works_header', 'Мои работы')
    .works__content#scroll-down
      #slider-component

  section.contact    
    .contact__back
      +image('bg/contact-bg.png', 'pic', 'contact__img')
    .contact__content 
      .contact__title
        +title('contact','about_header','Что обо мне', 'Говорят')
      .contact__reviews
        include ../common/reviews
      .contact__form-wrapper
        .contact__form
        +subtitle('form','Связаться со мной')
        include ../common/form-contact
      .contact__button
        a.button-scroll.button-scroll--up(href='#scroll-up')
          +icon('portf_arrow_up', 'arrow-scroll', '32px', '16px')
          
